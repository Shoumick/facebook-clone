<div class="profile">
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info flex-column">
        <%= gravatar_for @user %>
        <h1>
          <%= @user.name %>
        </h1>

        <% unless @user == current_user %>

          <% if current_user.friend?(user) %>

          <% elsif current_user.sent_request?(user) %>

          <% elsif current_user.pending_request?(user) %>

          <% else %>

          <% end %>

          <%= form_for(Friendship.new) do |f| %>
          <%= f.hidden_field :friend_id, value: @user.id %>
          <%= f.submit "Send friend request", class: "btn btn-primary" %>
        <% end %>
      <% end %>
    </section>
    <section class="friends">
      <% if @user.friends.any? %>
        <% render @friendships %>
        <% else %>
        <% end %>
      </section>
    </aside>
    <div class="col-md-8">
      <% if @user.posts.any? %>
        <h3>Posts (<%= @user.posts.count %>)</h3>
        <ol class="posts">
          <%= render @posts %>
        </ol>
      <% end %>
    </div>
    <div></div>
