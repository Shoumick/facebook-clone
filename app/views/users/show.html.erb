<div class="profile">
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
    <section class="friends">
    <% if @user.friends.any? %>
    <% render @friendships %>
    <% else %>
    <h3>Sorry, <%= @user.name%> have no friends. </h3>
    <% end %>

    <%= form_for(Friendship.new) do |f| %>
      <%= f.hidden_field :friend_id, value: @user.id %>
      <%= f.submit "Add Friend", class: "btn btn-primary" %>
    <% end %>

    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
    <% end %>
  </div>
  <div>
</div>