<div class="profile">
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info flex-column">
        <%= gravatar_for @user %>
        <h1>
          <%= @user.name %>
        </h1>

        <% unless @user == current_user %>
        <div class="friend-status">
          <% if current_user.friend?(@user) %>
            <%= render 'shared/friend_status_friends' %>
          <% elsif current_user.sent_request?(@user) %>
            <%= render 'shared/friend_status_sent' %>
          <% elsif current_user.pending_request?(@user) %>
            <%= render 'shared/friend_status_pending' %>
          <% else %>
            <%= render 'shared/friend_status_new' %>
          <% end %>
          </div>
      <% end %>
    </section>
    <section class="friends">
      <% if @user.friends.any? %>
        <% render @friendships %>
        <% else %>
        <% end %>
      </section>
    </aside>
    <div class="col-md-8">
      <% if @user.posts.any? %>
        <h3>Posts (<%= @user.posts.count %>)</h3>
        <ol class="posts">
          <%= render @posts %>
        </ol>
      <% end %>
    </div>
    <div></div>
