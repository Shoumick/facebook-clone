<div class="feed-container">

  <%= form_for(@post) do |f| %>

    <%= f.label "What's in your mind, #{current_user.name}?", class: "post-label" %>
    <%= f.text_area :content, placeholder: "Create a new post...", class: "post-textarea"%>
    <%= f.submit "Post", class: "btn btn-primary" %>
  <% end %>

<div class="posts-container">
  <%= render @posts %>
</div>

</div>
