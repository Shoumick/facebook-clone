  <%= form_for Comment.new do |f| %>
    <%= f.text_area :content, placeholder: "Write a comment...",
                              class: "new-comment" %>
    <%= f.hidden_field :post_id, value: post.id %>
    <div class="button">
    <%= f.button name: "comment-button" do %>
      <%= render 'shared/comment_icon' %>
    <% end %>
    </div>
  <% end %>
